---
interface Props {
  title?: string;
  description?: string;
  ogImage?: string; // absolute or root-relative
  canonical?: string; // absolute URL
  ogType?: 'website' | 'article';
}
const { title = 'Homepage', description = '', ogImage, canonical, ogType = 'website' } = Astro.props;
import '../styles/global.css';
import 'katex/dist/katex.min.css';
import { withBase, withBaseIfAbsolute } from '@lib/paths';
---
<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    {canonical && <link rel="canonical" href={canonical} />}
    <link rel="icon" href={withBase('favicon.ico')} />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:type" content={ogType} />
    <meta property="og:image" content={ogImage ?? withBase('og-default.png')} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}
    <meta name="twitter:image" content={ogImage ?? withBase('og-default.png')} />
  </head>
  <body>
    <header class="container">
      <nav style="display:flex;gap:1rem;align-items:center;justify-content:space-between;">
        <div style="display:flex;gap:1rem;align-items:center;">
          <a href={withBase('')}>Home</a>
          <a href={withBase('blog/')}>Blog</a>
          <a href={withBase('tags/')}>Tags</a>
        </div>
        <div style="display:flex;gap:0.75rem;">
          <a href="kodamatrix44@gmail.com" aria-label="Email">Email</a>
          <a href="https://x.com/mochi_dog_phys" target="_blank" rel="noopener noreferrer">X</a>
          <a href="https://github.com/inuverse44" target="_blank" rel="noopener noreferrer">GitHub</a>
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="container" style="color:var(--muted);">
      <p>Â© {new Date().getFullYear()} Inuverse</p>
    </footer>
  </body>
  </html>
